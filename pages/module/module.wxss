.homePageBox {
  display: flex;
  flex-direction: column; /*列布局*/
}

.homePage-title {
  height: 100px;
  display: flex;
  justify-content: center; /*水平居中*/
  align-items: center; /*垂直居中*/
}

.moduleBox {
  background-color: white;
  width: 90%;
  height: 100rpx;
  margin: 10rpx 40rpx;
  position: relative;
  overflow: hidden;
  transition: height 1s ease;
}

.viewBoxOff {
  height: 100rpx;
}

.viewBoxOn{
  height: 500rpx;
}

.mediaBoxOn, .basicsBoxOn {
  height: 340rpx;
}

.formBoxOn {
  height: 900rpx;
}

.navBoxOn, .mapBoxOn, .canvasBoxOn {
  height: 180rpx;
}

.menuContent {
  height: 100rpx;
  width: 100%;
  display: flex;
  background-color: white;
}

.menuContent>text {
  flex: 1;
  display: flex;
  align-items: center;
  text-indent: 25rpx;
}

.menuIcon {
  flex: 50rpx 0 0;
  display: flex;
  align-items: center;
  margin-right: 25rpx;
}

.menuIcon>image {
  width: 100%;
  height: 100%;
}

.menuList {
  width: 100%;
  min-height: 80rpx;
  position: absolute;
  top: 100rpx;
  background-color: white;
  z-index: 1;
}

.menuListBox {
  display: flex;
  border-bottom: 1rpx solid #ccc;
  width: 90%;
  height: 79rpx;
  margin: 0 auto;
  align-items: center; /*垂直居中*/
}

.menuListBox:last-child {
  border-bottom: 1rpx solid transparent;
}

.menuListBox>text {
  flex: 1;
}

.listIcon {
  flex: 50rpx 0 0;
  height: 50rpx;
}

.listIcon>image {
  width: 50rpx;
  height: 50rpx;
  transform: rotate(-90deg);
}
